<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_card"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/small"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    cardview:cardBackgroundColor="@color/card_background"
    cardview:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium"
        android:orientation="vertical">

        <TextView android:id="@+id/note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:text="My Awesome Note Title"/>

        <com.momana.bhromo.memoir.widget.AutoResizeTextView
            android:id="@+id/note_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:maxHeight="@dimen/notes_card_body_maxHeight"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_xlarge"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla id metus id lorem elementum lobortis non consequat orci. "/>

    </LinearLayout>

</android.support.v7.widget.CardView>