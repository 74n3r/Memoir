<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <TextView android:id="@+id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginRight="@dimen/medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:textSize="@dimen/text_xlarge"
        tools:text="My Awesome Note Title"/>

    <TextView android:id="@+id/note_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginRight="@dimen/medium"
        android:layout_marginBottom="@dimen/medium"
        android:maxLines="3"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_xlarge"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla id metus id lorem elementum lobortis non consequat orci. "/>

    <View android:background="#c8c8c8"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>